<!DOCTYPE html>
<html>
<%- include("layouts/head", {title: "Danh mục sản phẩm" })%>

<body>
    <%- include("layouts/header")%>
    <!--	Body	-->
    <div id="body">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <%- include("layouts/menu")%>
                </div>
            </div>
            <div class="row">
                <div id="main" class="col-lg-8 col-md-12 col-sm-12">
                    <%- include("layouts/slider")%>

                    <!--	List Product	-->
                    <div class="products">
                        <h3><%=category.title %> (hiện có <%=total%> sản phẩm)</h3>
                        <div class="product-list card-deck">
                            <% for(product of products) { %>
                            <div class="product-item card text-center">
                                <a href="/product-<%=product.slug%>.<%=product._id%>"><img src="../admin/images/<%=product.thumbnail%>"></a>
                                <h4><a href="/product-<%=product.slug%>.<%=product._id%>"><%=product.name %></a></h4>
                                <p>Giá Bán: <span><%=product.price %></span></p>
                            </div>
                           <% } %>
                        </div>
                      
                        
                       
                    </div>
                    <!--	End List Product	-->

                    <div id="pagination">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">Trang trước</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Trang sau</a></li>
                        </ul>
                    </div>
                </div>
                <%- include("layouts/sidebar")%>
            </div>
        </div>
    </div>
    <!--	End Body	-->

    <%- include("layouts/footer")%>

</body>

</html>