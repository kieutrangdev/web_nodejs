<!DOCTYPE html>
<html>
<%- include("layouts/head", {title: "Trang Chủ"})%>

<body>

    <%- include("layouts/header")%>

    <!--	Body	-->
    <div id="body">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <%- include("layouts/menu")%>
                </div>
            </div>
            <div class="row">
                <div id="main" class="col-lg-8 col-md-12 col-sm-12">
                    <%- include("layouts/slider")%>

                    <!--	Feature Product	-->
                    <div class="products">
                        <h3>Sản phẩm nổi bật</h3>

                        <div class="product-list card-deck">
                            <% for(product of featured) { %>
                            <div class="product-item card text-center">
                                <a href="/product-<%=product.slug%>.<%=product._id%>"><img src="/static/admin/images/<%=product.thumbnail%>"></a>
                                <h4><a href="/product-<%=product.slug%>.<%=product._id%>"><%= product.name %></a></h4>
                                <p>Giá Bán: <span><%= product.price %></span></p>
                            </div>
                            <% } %>


                        </div>
                        
                
                    </div>
                    <!--	End Feature Product	-->


                    <!--	Latest Product	-->
                    <div class="products">
                        <h3>Sản phẩm mới</h3>
                        <div class="product-list card-deck">
                            <% for(product of lastest) { %>
                                <div class="product-item card text-center">
                                    <a href="#"><img src="/static/admin/images/<%=product.thumbnail%>"></a>
                                    <h4><a href="#"><%= product.name %></a></h4>
                                    <p>Giá Bán: <span><%= product.price %></span></p>
                                </div>
                                <% } %>
                            
                     
                        </div>
                    </div>
                    <!--	End Latest Product	-->

                </div>

                <%- include("layouts/sidebar")%>
            </div>
        </div>
    </div>
    <!--	End Body	-->

    <%- include("layouts/footer")%>

</body>

</html>